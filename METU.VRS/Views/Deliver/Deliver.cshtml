@model  METU.VRS.Models.Sticker
@{
    Layout = null;
    object disabledAttributes = new { @class = "form-control no-limit", @disabled = "disabled", @readonly = "readonly" };
    if (Model == null)
    {
        disabledAttributes = new { @class = "form-control no-limit" };
    }
}

@using (Html.BeginForm("Deliver", "Deliver", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Sticker Serial Number</h4>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(s => s.SerialNumber)
            <div>
                @Html.TextBoxFor(s => s.SerialNumber, disabledAttributes)
                @Html.ValidationMessageFor(s => s.SerialNumber, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            @Html.HiddenFor(s => s.FID)
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Deliver Sticker</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
}

